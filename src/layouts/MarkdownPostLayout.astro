---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <slot />
  <p class="p-padding"><em><strong>{frontmatter.description}</strong></em></p>
  <p>{frontmatter.pubDate.slice(0, 10)}</p>

  <p>Escrito por: {frontmatter.author}</p>

  <img
    class="img"
    src={frontmatter.image.url}
    width="300"
    alt={frontmatter.image.alt}
  />
  <small>Linietsky, Manzur & Godot Contributors.</small>

  <div class="tags">
    {
      frontmatter.tags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div>
</Layout>

<style>
  :root {
    --dark: #13151a;
    --ligth: #fffdfb;
    --rojo: #f87171;
    --naranja: #fb923c;
    --gris: #5b6e8a;
    --code-dark: #334155;
    --code-light: #d1d5db;
  }
  a {
    color: var(--code-light);
    text-decoration: none;
  }
   a .dark {
    color: var(--naranja);
  }

  a:hover {
    color: var(--code-light);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    padding-top: 4rem;
  }

  .dark .tag  {
    margin: 0.25em;
    border-radius: 0.3em;
    padding: 0.3em 0.3em;
    font-size: 0.9em;
    background-color: rgb(30, 41, 54);
  }
  .tag {
    margin: 0.25em;
    border-radius: 0.3em;
    padding: 0.3em 0.3em;
    font-size: 0.9em;
    background-color: rgb(64, 112, 171);
  }

  .tag:hover {
    background-color: rgb(57, 74, 93);
  }
  .img {
    border: 2px solid var(--code-dark);
    border-radius: 5px;
    margin-top: 5rem;
  }
  .p-padding {
    padding-top: 5rem;
  }
  small {
    display: block;
  }
</style>
